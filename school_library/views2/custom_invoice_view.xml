<odoo>
    <data>

        <record id="view_move_form_custom" model="ir.ui.view">
            <field name="name">account.move.form.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='invoice_details']" position="inside">
                    <field name="total_price_in_order" string="Custom Field"/>
                </xpath>

                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="total_days" string="Additional Field"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
