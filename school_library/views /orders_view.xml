<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_library_order_search" model="ir.ui.view">
        <field name="name">library.book.order.search</field>
        <field name="model">library.book.order</field>
        <field name="arch" type="xml">
            <search string="Search Orders">
                <field name="order_date" string="Order Date"/>
                <field name="member_id" string="Student"/>
                <field name="book_id" string="Book"/>
                <filter string="Today's Orders" domain="[('order_date', '=', context_today())]"/>
            </search>
        </field>
    </record>
    <record id="view_library_order_tree" model="ir.ui.view">
        <field name="name">library.book.order.tree</field>
        <field name="model">library.book.order</field>
        <field name="arch" type="xml">
            <tree string="Orders">
                <field name="order_date" string="Order Date"/>
                <field name="student_id" string="Student"/>
                <field name="book_id" string="Book"/>
                <field name="quantity" string="Quantity"/>
                <field name="status" string="Status"/>
            </tree>
        </field>
    </record>
   <record id="view_library_order_form" model="ir.ui.view">
        <field name="name">library.book.order.form</field>
        <field name="model">library.book.order</field>
        <field name="arch" type="xml">
            <form string="Orders">
                <sheet>
                    <group>
                       <field name="order_date" string="Order Date"/>
                       <field name="student_id" string="Student"/>
                       <field name="book_id" string="Book"/>
                       <field name="quantity" string="Quantity"/>
                       <field name="status" string="Status"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" class="oe_chatter_followers"/>
                    <field name="message_ids" widget="mail_thread" class="oe_chatter_messages"/>
                </div>
            </form>
        </field>
    </record>

</odoo>


