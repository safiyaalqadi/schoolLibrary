<?xml version="1.0" encoding="UTF-8"?>
<odoo version="16.0">
    <record id="view_library_author_search" model="ir.ui.view">
        <field name="name">library.author.search</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <search string="Search Authors">
                <field name="name" string="Author Name"/>
                <field name="bio" string="Biography"/>
                <filter string="Authors without Biography" domain="[('bio', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="view_library_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <field name="name" string="Author Name" required="1"/>
                        <field name="bio" string="Biography"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree string="Authors">
                <field name="name" string="Author Name"/>
                <field name="bio" string="Biography"/>
            </tree>
        </field>
    </record>
</odoo>